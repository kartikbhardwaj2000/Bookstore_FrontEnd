<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateListing.Fragments.CreateListingStep1Fragment"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_16pts"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Photos of Book"
        android:textSize="@dimen/text_large"
        android:gravity="center"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Photos of Front Cover, Back Cover and Middle of Book"
        android:textSize="@dimen/margin_16pts"
        android:gravity="center"
        android:layout_margin="@dimen/margin_16pts"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_icon"
        android:layout_margin="70dp"
        android:padding="120dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginHorizontal="@dimen/margin_16pts"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_gravity="center_horizontal"

        android:textColor="@color/white"
        android:enabled="true"

        />

</LinearLayout>