<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateListing.Fragments.CreateListingStep5Fragment"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookPrice"
        android:textSize="@dimen/text_large"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin_16pts"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16pts"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        android:hint="100"
        android:background="@android:color/transparent"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bookDescription"
        android:textSize="@dimen/text_large"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_margin="@dimen/margin_16pts"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_16pts"
        android:layout_marginTop="@dimen/margin_16pts"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:hint="Write a short description"
        android:textSize="24sp"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginHorizontal="@dimen/margin_16pts"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_gravity="center_horizontal"

        android:textColor="@color/white"
        android:enabled="true"

        />



</LinearLayout>